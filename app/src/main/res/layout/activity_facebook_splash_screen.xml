<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FacebookSplashScreen">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_gravity="center"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_facebook_foreground"
            android:scaleType="fitXY"
            android:adjustViewBounds ="true"
            tools:ignore="ContentDescription" />
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:paddingHorizontal="100dp"
        android:orientation="vertical"
        >
        <!--Facebook text -->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:fontFamily="@font/lexend_mega"
                android:text="@string/facebook"
                android:textSize="26sp"
                android:textStyle="bold" />
        </androidx.appcompat.widget.LinearLayoutCompat>
        <!-- Icons -->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="200dp"
            android:layout_height="32dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:padding="0dp"
            android:alpha="0.6">
            <!-- Facebook-->
            <ImageView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_facebook2_foreground"
                android:layout_marginHorizontal="5dp"
                tools:ignore="ContentDescription" />
            <!-- Messanger-->
            <ImageView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:src="@mipmap/ic_messanger_foreground"
                tools:ignore="ContentDescription" />
            <!-- Instagram-->
            <ImageView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:src="@mipmap/ic_instagram_foreground"
                tools:ignore="ContentDescription" />
            <!-- Whatsup-->
            <ImageView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:src="@mipmap/ic_whatsapp_foreground"
                tools:ignore="ContentDescription" />
            <!--Oculus-->
            <ImageView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:src="@mipmap/ic_oculus_foreground"
                tools:ignore="ContentDescription" />


        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
<!--    <androidx.appcompat.widget.LinearLayoutCompat-->
<!--        android:layout_width="410dp"-->
<!--        android:layout_height="30dp"-->
<!--        android:background="@color/black"-->
<!--        ></androidx.appcompat.widget.LinearLayoutCompat>-->

</androidx.appcompat.widget.LinearLayoutCompat>